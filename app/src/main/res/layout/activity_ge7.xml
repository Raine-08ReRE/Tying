<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GE7">

    <ImageView
        android:id="@+id/imgGe7_Bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ge7_bg" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/gliker"
        android:text="Rating Bar and Alert Dialog"
        android:textColor="#E191A3"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:numStars="5"
        android:progressTint="#C15B75"
        android:rating="2"
        android:stepSize=".5"
        app:layout_constraintEnd_toEndOf="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="@+id/txtTitle"
        app:layout_constraintTop_toTopOf="@+id/txtTitle" />

    <TextView
        android:id="@+id/tvResultGE7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/tenor_sans"
        android:text="  "
        android:textColor="#C15B75"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />


    <Button
        android:id="@+id/btnClickGE7"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#EF9AB6"
        android:text="Click"
        app:layout_constraintEnd_toEndOf="@+id/tvResultGE7"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/tvResultGE7"
        app:layout_constraintTop_toBottomOf="@+id/tvResultGE7" />

    <Button
        android:id="@+id/btnCloseGE7"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#EF9AB6"
        android:text="Close"
        app:layout_constraintEnd_toEndOf="@+id/btnClickGE7"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/btnClickGE7"
        app:layout_constraintTop_toBottomOf="@+id/btnClickGE7"  />


</androidx.constraintlayout.widget.ConstraintLayout>