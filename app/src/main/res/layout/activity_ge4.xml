<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GE4">

    <ImageView
        android:id="@+id/imgGe4_Bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ge4_bg" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="77dp"
        android:fontFamily="@font/georgia"
        android:text="EditText, TextView and Button"
        android:textColor="#D6357D"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsernameGE4"
        android:layout_width="266dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="73dp"
        android:backgroundTint="#D6357D"
        android:ems="10"
        android:fontFamily="@font/nexa"
        android:hint="Username: "
        android:inputType="text"
        android:textColor="#D6357D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle" />

    <EditText
        android:id="@+id/etPasswordGE4"
        android:layout_width="266dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="73dp"
        android:backgroundTint="#D6357D"
        android:ems="10"
        android:fontFamily="@font/nexa"
        android:hint="Password: "
        android:inputType="textPassword"
        android:textColor="#D6357D"
        app:layout_constraintEnd_toEndOf="@+id/etUsernameGE4"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/etUsernameGE4"
        app:layout_constraintTop_toBottomOf="@+id/etUsernameGE4" />



    <Button
        android:id="@+id/btnLoginGE4"
        android:layout_width="200dp"
        android:layout_height="52dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#DD7097"
        android:text="Click"
        app:layout_constraintEnd_toEndOf="@+id/etPasswordGE4"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="@+id/etPasswordGE4"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordGE4" />


    <TextView
        android:id="@+id/tvResultGE4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/nexa"
        android:text="  "
        android:textColor="#D6357D"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btnLoginGE4"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/btnLoginGE4"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginGE4" />

    <ImageView
        android:id="@+id/img_Back"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="344dp"
        android:onClick="onBackClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_pink" />

</androidx.constraintlayout.widget.ConstraintLayout>