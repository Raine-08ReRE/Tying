<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GE6">

    <ImageView
        android:id="@+id/imgGe6_Bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ge6_bg" />

    <CheckBox
        android:id="@+id/chkOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:text="One"
        android:textSize="15dp"
        android:fontFamily="@font/gliker"
        android:textColor="#A8439B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/chkTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:fontFamily="@font/gliker"
        android:textColor="#A8439B"
        app:layout_constraintTop_toBottomOf="@+id/chkOne"
        app:layout_constraintStart_toStartOf="@+id/chkOne"
        app:layout_constraintEnd_toEndOf="@+id/chkOne"/>

    <CheckBox
        android:id="@+id/chkThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:fontFamily="@font/gliker"
        android:textColor="#A8439B"
        android:backgroundTint="#A8439B"
        app:layout_constraintTop_toBottomOf="@+id/chkTwo"
        app:layout_constraintStart_toStartOf="@+id/chkTwo"
        app:layout_constraintEnd_toEndOf="@+id/chkTwo"/>

    <CheckBox
        android:id="@+id/chkFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:fontFamily="@font/gliker"
        android:textColor="#A8439B"
        android:backgroundTint="#A8439B"
        app:layout_constraintTop_toBottomOf="@+id/chkThree"
        app:layout_constraintStart_toStartOf="@+id/chkThree"
        app:layout_constraintEnd_toEndOf="@+id/chkThree"/>

    <TextView
        android:id="@+id/tvResultGE6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/jelly"
        android:text=""
        android:textColor="#C15B75"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/chkFour"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/chkFour"
        app:layout_constraintTop_toBottomOf="@+id/chkFour" />

    <Button
        android:id="@+id/btnClickGE6"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#D161C2"
        android:text="Click"
        android:fontFamily="@font/gliker"
        app:layout_constraintEnd_toEndOf="@+id/tvResultGE6"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="@+id/tvResultGE6"
        app:layout_constraintTop_toBottomOf="@+id/tvResultGE6" />

    <ImageView
        android:id="@+id/img_Back"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="344dp"
        android:onClick="onBackClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_violet" />

</androidx.constraintlayout.widget.ConstraintLayout>